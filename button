body {
    background-color: white;
    color: black;
    transition: background-color 0.3s, color 0.3s;
}

body.dark-mode {
    background-color: #121212;
    color: white;
}

<button onclick="toggleTheme()">Сменить тему</button>

function toggleTheme() {
    document.body.classList.toggle('dark-mode');
}
